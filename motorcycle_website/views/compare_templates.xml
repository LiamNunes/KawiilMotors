<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="compare_template" name="Compare Motorcycles">
        <t t-call="website.layout">
            <div class="container">
                <h1>Compare Motorcycles</h1>
                <table class="table table-striped">
                    <thread>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Horsepower</th>
                            <th>Top Speed</th>
                            <th>Torque</th>
                            <th>Battery Capacity</th>
                            <th>Charge Time</th>
                            <th>Range</th>
                            <th>Curb Weight</th>
                        </tr>
                    </thread>
                    <tbody>
                        <t t-foreach="motorcycles" t-as="motorcycle">
                            <tr>
                                <td><img t-att-src="'/web/image/product.template/' + str(motorcycle.id) + '/image_1920'" alt="Image" style="max-width: 100px;"/></td>
                                <td><t t-esc="motorcycle.name"/></td>
                                <td><t t-esc="motorcycle.horsepower"/></td>
                                <td><t t-esc="motorcycle.top_speed"/></td>
                                <td><t t-esc="motorcycle.torque"/></td>
                                <td><t t-esc="motorcycle.battery_capacity"/></td>
                                <td><t t-esc="motorcycle.charge_time"/></td>
                                <td><t t-esc="motorcycle.range"/></td>
                                <td><t t-esc="motorcycle.weight"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>