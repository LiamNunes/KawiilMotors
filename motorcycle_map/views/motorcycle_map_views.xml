<odoo>
    <record id="view_motorcycle_registration_map" model="ir.ui.view">
        <field name="name">motorcycle.registration.map</field>
        <field name="model">motorcycle.registration</field>
        <field name="arch" type="xml">
            <map string="Motorcycle Registration Map">
                <field name="owner_id"/>
            </map>
        </field>
    </record>

    <record id="action_motorcycle_registration_map" model="ir.actions.act_window">
        <field name="name">Motorcycle Registrations</field>
        <field name="res_model">motorcycle.registration</field>
        <field name="view_mode">map,tree,form</field>
        <field name="view_id" ref="view_motorcycle_registration_map"/>
    </record>

    <menuitem id="menu_motorcycle_registration_map"
              name="Motorcycle Registrations"
              parent="motorcycle_registry.menu_motorcycle_registry_root"
              action="action_motorcycle_registration_map"/>
</odoo>